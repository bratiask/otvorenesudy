<% provide :title, t('.title') %>

<%= render "devise/shared/links" %>

<section id="user-registration" class="user">
  <div class="row">
    <div class="offset2 span8">
      <%= form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>
        <legend><%= yield :title %></legend>
        <p>
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: :span8 %>
        </p>
        <p>
          <%= f.label :password %>
          <%= f.password_field :password, class: :span8 %>
        </p>
        <p>
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: :span8 %>
        </p>
        <button type="submit" class="btn btn-primary btn-large"><%= t '.submit' %></button>
      <% end %>
    </div>
  </div>
</section>
