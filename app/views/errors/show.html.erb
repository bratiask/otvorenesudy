<% provide :title, title(@status, @title) %>

<section id="error-description" class="error">
  <div class="row">
    <div class="span6">
      <h1 class="centered">
        <%= @status %> <%= @title %>
      </h1>

      <p class="centered">
        <%= t 'angry_unicorn' %>
        <br/>
        <span class="muted"><%= @description %></span>
      </p>
    </div>

    <div class="span6">
      <img class="unicorn" src="<%= asset_path('unicorn.png') %>" alt="<%= t 'unicorn' %>" />
    </div>
  </div>
</section>
