<% if @court.information_center %>
  <%= render 'office', name: t('.information_center'), office: @court.information_center %>
<% end %>

<% if @court.registry_center %>
  <%= tag :hr if @court.information_center %>
  <%= render 'office', name: t('.registry'), office: @court.registry_center %>
<% end %>

<% if @court.business_registry_center %>
  <%= tag :hr if @court.information_center || @court.registry_center %>
  <%= render 'office', name: t('.commercial_registery'), office: @court.business_registry_center %>
<% end %>
