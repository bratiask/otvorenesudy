<% provide :title, t('.title') %>

<section id="courts-map">
  <div class="page-header">
    <h1>
      <%= yield :title %>
      <br/>
      <small><%= t '.in_slovakia' %> <%= @courts.size %> <%= t '.courts_in' %> <%= @groups.size %> <%= t '.places' %>.</small>
    </h1>
  </div>
  
  <div class="row">
    <div class="span12">
      <p>
        <%= icon_tag :'map-marker' %>
        <%= t '.hint' %>
      </p>

      <%= courts_map @groups %>
    </div>
  </div>
</section>
