@import 'mixins';

.pattern {
  background-image: url(<%= asset_path 'patterns/cube.png' %>), url(<%= asset_path 'patterns/night.png' %>);
  background-attachment: scroll;
  background-color: transparent;
  background-position: center center;
  background-repeat: repeat;
}

.logo {
  background-image: url(<%= asset_path 'logos/opencourts-gray-light-to-white-20.png' %>);
  background-clip: content-box;
  background-color: transparent;
  background-origin: content-box;
  background-position: top;
  background-repeat: no-repeat;
}

li.active .logo, .logo:hover, .logo:focus {
  background-position: bottom;
}

.logo-transparency,
.logo-restart,
.logo-pontis,
.logo-iba,
.logo-sme,
.logo-konrad-adenauer-stiftung {
  display: block;

  text-align: center;

  img {
    filter: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg"><filter id="grayscale"><feColorMatrix type="matrix" values="0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0 0 0 1 0"/></filter></svg>#grayscale');
    filter: gray;

    -webkit-filter: grayscale(1.0);

    @include transition(all .5s ease);
    @include backface-visibility(hidden);
  }

  img:hover {
    filter: none;

    -webkit-filter: grayscale(0.0);
  }
}

.logo-sme img {
  @include opacity(75);

  &:hover, &:focus {
    @include opacity(100);
  }
}

.logo-restart {
  margin: 20px 0px;
}

.logo-transparency {
  margin: 25px 0px;
}

.logo-pontis {
  margin: 25px 0px;
}

.logo-iba {
  margin: 20px 0px;
}

.logo-konrad-adenauer-stiftung {
  margin: 25px 0px;
}

.banner-transparency-2-percent-2015 {
  background-image: url(<%= image_path('banners/transparency-2-percent-2015-1800.jpg') %>);
  background-position: center center;
}
